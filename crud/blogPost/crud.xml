<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<crud>
    <allowHeaderAsQueryParameter>true</allowHeaderAsQueryParameter>
    <broadcastCreate>false</broadcastCreate>
    <broadcastUpdate>false</broadcastUpdate>
    <changeTracker>nabu.cms.core.providers.misc.changeTracker</changeTracker>
    <coreType>nabu.cms.blog.database.types.blogPost</coreType>
    <createBlacklistFields>anonymized</createBlacklistFields>
    <createBlacklistFields>componentId</createBlacklistFields>
    <createBlacklistFields>modified</createBlacklistFields>
    <createBlacklistFields>ownerId</createBlacklistFields>
    <createBlacklistFields>slug</createBlacklistFields>
    <createBlacklistFields>verified</createBlacklistFields>
    <createPermission>blog.manage</createPermission>
    <createRole>$user</createRole>
    <deletePermission>blog.manage</deletePermission>
    <deleteRole>$user</deleteRole>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>parentId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>ownerId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>published</key>
        <operator>&lt;=</operator>
        <or>false</or>
        <alias>publishedBefore</alias>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <getPermission>blog.manage</getPermission>
    <hooks>false</hooks>
    <listPermission>blog.manage</listPermission>
    <listRole>$user</listRole>
    <provider>nabu.cms.core.providers.crud.enode.provider</provider>
    <restLimitToUser>true</restLimitToUser>
    <securityContextField>parentId</securityContextField>
    <updateBlacklistFields>anonymized</updateBlacklistFields>
    <updateBlacklistFields>componentId</updateBlacklistFields>
    <updateBlacklistFields>modified</updateBlacklistFields>
    <updateBlacklistFields>slug</updateBlacklistFields>
    <updateBlacklistFields>verified</updateBlacklistFields>
    <updatePermission>blog.manage</updatePermission>
    <updateRegenerateFields>modified</updateRegenerateFields>
    <updateRole>$user</updateRole>
    <useAsAuthorizationServiceContext>false</useAsAuthorizationServiceContext>
    <useExplicitLanguage>false</useExplicitLanguage>
    <useGlobalPermissionContext>false</useGlobalPermissionContext>
    <useLanguage>false</useLanguage>
    <useListOutputForCreate>false</useListOutputForCreate>
    <useListOutputForUpdate>false</useListOutputForUpdate>
    <useProjectAsPermissionContext>false</useProjectAsPermissionContext>
    <useServiceContextAsPermissionContext>false</useServiceContextAsPermissionContext>
    <useWebApplicationAsPermissionContext>false</useWebApplicationAsPermissionContext>
</crud>
